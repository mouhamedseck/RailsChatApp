<%= link_to "RailsChatApp", root_path, class: "item" %>
<a class="item">
  Messages
</a>
<div class="right menu">
  <div class="ui dropdown item">

    Account <i class="dropdown icon"></i>
    <div class="menu">
      <a class="item">Log out</a>
      <%= link_to "Log in", login_path, class: "item" %>
      <a class="item">Sign up</a>
    </div>
  </div>

  <% if logged_in? %>
    <div class="item">
      <%= link_to "Logout", logout_path, class: "item" %>
    </div>
  <% else %>
    <div class="item">
      <%= link_to "Log in", login_path, class: "item" %>
    </div>
  <% end %>

  <% if !logged_in? %>
    <div class="item">
      <div class="ui primary button">Sign Up</div>
    </div>
  <% end %>
</div>
